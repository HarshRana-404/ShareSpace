<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/card_view_bg"
    app:cardElevation="2dp"
    >

        <LinearLayout
            android:id="@+id/ll_workspace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal"
            android:background="@color/card_view_bg"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="4dp"
            >

            <ImageView
                android:id="@+id/iv_workspace_cover_image"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="2"
                android:src="@drawable/workspace"
                android:scaleType="centerCrop"
                android:layout_marginRight="16dp"
                android:background="@color/card_view_bg"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_workspace_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:text="Workspace Name"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_workspace_resources"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:text="This will include all the resources from the Workspace on an offer"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_resources"
                    android:drawablePadding="4dp"/>
                <TextView
                    android:id="@+id/tv_workspace_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:text="This will be the Address Line"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginVertical="8dp"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawablePadding="4dp"/>
                <TextView
                    android:id="@+id/tv_workspace_price_per_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:text="Price Per Day"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_dollar"
                    android:drawablePadding="4dp"/>

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>